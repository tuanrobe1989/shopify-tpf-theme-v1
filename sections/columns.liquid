<section id="heading-section-{{ section.id }}">
<div class="container">
  <div class="flex">
  {% for block in section.blocks %}
        {% if block.settings.large_image != blank  and block.settings.small_image != blank %}
            <a href="{{ block.settings.link }}" class="item">
                <img data-src="{{ block.settings.image | img_url: 'master' }}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mPccwYAAkoBipwM/g8AAAAASUVORK5CYII=" width="800" height="800" title="{{ block.settings.title }}" alt="{{ block.settings.title }}" lass="lazy">
              </a>
            {% endif %}
    {% endfor %}
  </div>
</div>
</section>
{% schema %}
{
  "name": "Columns",
  "settings": [
    {
      "type": "range",
      "id": "mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Mobile - Number of Columns",
      "default": 1
    },
    {
      "type": "range",
      "id": "tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Tablet - Number of Columns",
      "default": 1
    },
    {
      "type": "range",
      "id": "pc",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "PC - Number of Columns",
      "default": 1
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Slide Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Image Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "columns",
      "name": "Columns"
    }
  ]
}
{% endschema %}