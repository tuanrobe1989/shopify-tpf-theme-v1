<div id="heading-section-{{ section.id }}" class="container pt-10 py-5">
    <{{ section.settings.heading-tag }} class="text-center text-xl md:text-3xl font-extrabold">{{ section.settings.heading }}</{{ section.settings.heading-tag }}>
</div>
{% schema %}
{
  "name": "heading",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "radio",
      "id": "heading-tag",
      "label": "Tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "strong",
          "label": "Strong"
        }
      ],
      "default": "h1"
    }
  ],
  "presets": [
    {
      "category": "heading",
      "name": "Heading"
    }
  ]
}
{% endschema %}