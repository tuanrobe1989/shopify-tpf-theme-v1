{% if section.blocks %}
<section id="mainslider-section-{{ section.id }}">
  <div class="owl-carousel owl-theme dots-bottom dot-square" data-lazyLoad="true">
    {% for block in section.blocks %}
        {% if block.settings.large_image != blank  and block.settings.small_image != blank %}
            <a href="{{ block.settings.link }}" class="item">
                <picture>
                  <source
                    srcset="{{ block.settings.large_image | img_url: 'master' }}"
                    media="(min-width: 768px)"
                  >
                  <source
                    srcset="{{ block.settings.small_image | img_url: 'master' }}"
                    media="(max-width: 767px)"
                  >
                    <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mPccwYAAkoBipwM/g8AAAAASUVORK5CYII=" width="800" height="800" title="{{ block.settings.title }}" alt="{{ block.settings.title }}" lass="owl-lazy">
                </picture>
              </a>
            {% endif %}
    {% endfor %}
  </div>
</section>
{% endif %}
{% schema %}
{
  "name": "Main Slider",
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "large_image",
          "label": "Large Image"
        },
        {
          "type": "image_picker",
          "id": "small_image",
          "label": "Small Image"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Slide Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Image Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "MainSlider",
      "name": "Main Slider"
    }
  ]
}
{% endschema %}